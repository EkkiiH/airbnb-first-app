<div class="light-bckgrnd py-5 h-100">
  <div class="container-form col-sm-8 col-lg-6">
  <div class="m-5">
    <h2>Welcome back !</h2>
  </div>
  <div class="mb-3 form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <div>
        <%= f.button :submit, "Log in", class:'btn-pill-pink' %>
      </div>
    <% end %>
  <div>
    <%= render "devise/shared/links" %>
  </div>
</div>
