<div class="m-5">
  <h1>Listings#index</h1>
  <p>Find me in app/views/listings/index.html.erb</p>
</div>

<div class="container">
  <div class="d-flex justify-content-evenly flex-wrap">
  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

    <% @listings.each do |listing| %>
      <div class="card m-3 p-3" style="width:20rem;">
        <%= link_to(listing_path(listing), class:'text-decoration-none ')  do  %>
          <h2><%= listing.title %></h2>
          <p><%= listing.location %></p>
          <p><%= listing.price %></p>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to 'âž• add new', new_listing_path, class: 'btn btn-success' %>
</div>
