<div class="main-div1 m-5">
  <div class="form1 my-5">
      <h1>Your buddy <%= @listing.title %></h1>
  </div>
  <div class="container">
    <div class="m-3 d-flex">
      <div class="img-product" style="background-image: url('<%= cl_image_path @listing.photo.key %>')" ></div>
      <div class="text-product">
        <h2><%= @listing.title %></h2>
        <p>🌍 <%= @listing.location %></p>
        <p>💲 <%= @listing.price %></p>
        <p><%= @listing.description %></p>
      </div>
    </div>
      <div class="d-flex align-items-end flex-row-reverse">
        <%= link_to "Rent #{@listing.title}", new_listing_booking_path(@listing), class:'btn-pill-pink mx-2' %>
        <%= link_to 'Edit my buddy', edit_listing_path, class:'btn-pill-pink mx-2' %>
      </div>
  </div>
</div>
